import { useState } from 'react';
import { useRouter } from 'next/router';
import { useQuery, useMutation, useQueryClient } from '@tanstack/react-query';
import { PortalLayout } from '@/components/portal/PortalLayout';
import { ContactForm } from '@/components/crm/ContactForm';
import { api } from '@/lib/api';
import { Contact, Activity } from '@/types/crm';
import { cn } from '@/lib/cn';
import { format } from 'date-fns';

export default function ContactDetailPage() {
  const router = useRouter();
  const { id } = router.query;
  const queryClient = useQueryClient();
  const [isEditing, setIsEditing] = useState(false);
  const [showDeleteConfirm, setShowDeleteConfirm] = useState(false);

  // Get auth token from session storage
  const getToken = () => {
    if (typeof window === 'undefined') return '';
    const tokens = sessionStorage.getItem('auth_tokens');
    if (!tokens) return '';
    return JSON.parse(tokens).access_token;
  };

  // Fetch contact details
  const {
    data: contactResponse,
    isLoading,
    error,
  } = useQuery<{ success: boolean; data: Contact }>({
    queryKey: ['contact', id],
    queryFn: async () => {
      const token = getToken();
      if (!token) throw new Error('Not authenticated');
      if (!id || typeof id !== 'string') throw new Error('Invalid contact ID');
      return api.getContact(id, token) as Promise<{ success: boolean; data: Contact }>;
    },
    enabled: !!id && typeof window !== 'undefined',
  });

  // Update contact mutation
  const updateMutation = useMutation({
    mutationFn: async (data: any) => {
      const token = getToken();
      if (!token) throw new Error('Not authenticated');
      if (!id || typeof id !== 'string') throw new Error('Invalid contact ID');
      return api.updateContact(id, data, token);
    },
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['contact', id] });
      queryClient.invalidateQueries({ queryKey: ['contacts'] });
      setIsEditing(false);
    },
  });

  // Delete contact mutation
  const deleteMutation = useMutation({
    mutationFn: async () => {
      const token = getToken();
      if (!token) throw new Error('Not authenticated');
      if (!id || typeof id !== 'string') throw new Error('Invalid contact ID');
      return api.deleteContact(id, token);
    },
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['contacts'] });
      router.push('/app/crm/contacts');
    },
  });

  const handleFormSubmit = async (data: any) => {
    await updateMutation.mutateAsync(data);
  };

  const handleDelete = async () => {
    await deleteMutation.mutateAsync();
  };

  const contact: Contact | undefined = contactResponse?.data;

  const getLifecycleStageBadge = (stage?: string) => {
    const badges = {
      lead: 'bg-yellow-500/20 text-yellow-400 border-yellow-500/30',
      prospect: 'bg-blue-500/20 text-blue-400 border-blue-500/30',
      customer: 'bg-green-500/20 text-green-400 border-green-500/30',
      partner: 'bg-purple-500/20 text-purple-400 border-purple-500/30',
    };
    return badges[stage as keyof typeof badges] || 'bg-gray-500/20 text-gray-400 border-gray-500/30';
  };

  const getScoreColor = (score?: number) => {
    if (!score) return 'text-gray-500';
    if (score >= 80) return 'text-green-400';
    if (score >= 50) return 'text-yellow-400';
    return 'text-red-400';
  };

  // Mock activity timeline - in production this would come from the API
  const mockActivities: Activity[] = [
    {
      id: '1',
      type: 'created',
      description: 'Contact created',
      entity_type: 'contact',
      entity_id: id as string,
      timestamp: contact?.created_at || new Date().toISOString(),
    },
    {
      id: '2',
      type: 'updated',
      description: 'Contact information updated',
      entity_type: 'contact',
      entity_id: id as string,
      timestamp: contact?.updated_at || new Date().toISOString(),
    },
  ];

  if (isLoading) {
    return (
      <PortalLayout>
        <div className="flex items-center justify-center h-64">
          <div className="text-cyan-400 text-lg animate-pulse">Loading contact...</div>
        </div>
      </PortalLayout>
    );
  }

  if (error || !contact) {
    return (
      <PortalLayout>
        <div className="space-y-6">
          <div className="bg-red-900/20 border border-red-500/50 rounded-lg p-4">
            <p className="text-red-400">
              Failed to load contact. {error instanceof Error ? error.message : 'Contact not found.'}
            </p>
          </div>
          <button
            onClick={() => router.push('/app/crm/contacts')}
            className="text-blue-400 hover:text-blue-300"
          >
            &larr; Back to Contacts
          </button>
        </div>
      </PortalLayout>
    );
  }

  return (
    <PortalLayout>
      <div className="space-y-6">
        {/* Header */}
        <div className="flex items-start justify-between">
          <div className="flex-1">
            <button
              onClick={() => router.push('/app/crm/contacts')}
              className="text-blue-400 hover:text-blue-300 mb-4 flex items-center gap-2"
            >
              <svg className="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M15 19l-7-7 7-7" />
              </svg>
              Back to Contacts
            </button>
            <h1 className="text-3xl font-bold text-white">{contact.full_name}</h1>
            <div className="mt-2 flex items-center gap-3">
              {contact.lifecycle_stage && (
                <span
                  className={cn(
                    'px-3 py-1 text-xs font-medium rounded-full border capitalize',
                    getLifecycleStageBadge(contact.lifecycle_stage)
                  )}
                >
                  {contact.lifecycle_stage}
                </span>
              )}
              {contact.lead_score !== undefined && (
                <span className={cn('text-sm font-semibold', getScoreColor(contact.lead_score))}>
                  Score: {contact.lead_score}
                </span>
              )}
            </div>
          </div>
          <div className="flex gap-3">
            {!isEditing && (
              <>
                <button
                  onClick={() => setIsEditing(true)}
                  className="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium transition-colors flex items-center gap-2"
                >
                  <svg className="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path
                      strokeLinecap="round"
                      strokeLinejoin="round"
                      strokeWidth={2}
                      d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                    />
                  </svg>
                  Edit
                </button>
                <button
                  onClick={() => setShowDeleteConfirm(true)}
                  className="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg font-medium transition-colors flex items-center gap-2"
                >
                  <svg className="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path
                      strokeLinecap="round"
                      strokeLinejoin="round"
                      strokeWidth={2}
                      d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                    />
                  </svg>
                  Delete
                </button>
              </>
            )}
          </div>
        </div>

        <div className="grid grid-cols-1 lg:grid-cols-3 gap-6">
          {/* Main Content */}
          <div className="lg:col-span-2 space-y-6">
            {isEditing ? (
              <div className="bg-gray-900 border border-gray-800 rounded-lg p-6">
                <h2 className="text-xl font-bold text-white mb-6">Edit Contact</h2>
                <ContactForm
                  contact={contact}
                  onSubmit={handleFormSubmit}
                  onCancel={() => setIsEditing(false)}
                  isSubmitting={updateMutation.isPending}
                />
              </div>
            ) : (
              <div className="bg-gray-900 border border-gray-800 rounded-lg p-6">
                <h2 className="text-xl font-bold text-white mb-6">Contact Information</h2>
                <dl className="grid grid-cols-1 sm:grid-cols-2 gap-6">
                  <div>
                    <dt className="text-sm font-medium text-gray-400">Email</dt>
                    <dd className="mt-1 text-sm text-white">{contact.email || '-'}</dd>
                  </div>
                  <div>
                    <dt className="text-sm font-medium text-gray-400">Phone</dt>
                    <dd className="mt-1 text-sm text-white">{contact.phone || '-'}</dd>
                  </div>
                  <div>
                    <dt className="text-sm font-medium text-gray-400">Company</dt>
                    <dd className="mt-1 text-sm text-white">{contact.company_name || '-'}</dd>
                  </div>
                  <div>
                    <dt className="text-sm font-medium text-gray-400">Lead Score</dt>
                    <dd className={cn('mt-1 text-sm font-semibold', getScoreColor(contact.lead_score))}>
                      {contact.lead_score !== undefined ? contact.lead_score : '-'}
                    </dd>
                  </div>
                  <div>
                    <dt className="text-sm font-medium text-gray-400">Created</dt>
                    <dd className="mt-1 text-sm text-white">
                      {format(new Date(contact.created_at), 'MMM dd, yyyy HH:mm')}
                    </dd>
                  </div>
                  <div>
                    <dt className="text-sm font-medium text-gray-400">Last Updated</dt>
                    <dd className="mt-1 text-sm text-white">
                      {format(new Date(contact.updated_at), 'MMM dd, yyyy HH:mm')}
                    </dd>
                  </div>
                </dl>
              </div>
            )}
          </div>

          {/* Sidebar */}
          <div className="space-y-6">
            {/* Activity Timeline */}
            <div className="bg-gray-900 border border-gray-800 rounded-lg p-6">
              <h2 className="text-lg font-bold text-white mb-4">Activity Timeline</h2>
              <div className="space-y-4">
                {mockActivities.map((activity) => (
                  <div key={activity.id} className="flex gap-3">
                    <div className="flex-shrink-0 w-2 h-2 mt-2 rounded-full bg-blue-500" />
                    <div className="flex-1 min-w-0">
                      <p className="text-sm text-white">{activity.description}</p>
                      <p className="text-xs text-gray-500 mt-1">
                        {format(new Date(activity.timestamp), 'MMM dd, yyyy HH:mm')}
                      </p>
                    </div>
                  </div>
                ))}
              </div>
            </div>

            {/* Quick Stats */}
            <div className="bg-gray-900 border border-gray-800 rounded-lg p-6">
              <h2 className="text-lg font-bold text-white mb-4">Quick Stats</h2>
              <dl className="space-y-3">
                <div>
                  <dt className="text-xs text-gray-400">Contact ID</dt>
                  <dd className="text-sm text-white font-mono">{contact.id}</dd>
                </div>
                {contact.company_id && (
                  <div>
                    <dt className="text-xs text-gray-400">Company ID</dt>
                    <dd className="text-sm text-white font-mono">{contact.company_id}</dd>
                  </div>
                )}
              </dl>
            </div>
          </div>
        </div>
      </div>

      {/* Delete Confirmation Modal */}
      {showDeleteConfirm && (
        <div className="fixed inset-0 bg-black/80 backdrop-blur-sm flex items-center justify-center z-50 p-4">
          <div className="bg-gray-900 border border-red-500/50 rounded-lg max-w-md w-full p-6">
            <h2 className="text-xl font-bold text-white mb-4">Delete Contact</h2>
            <p className="text-gray-300 mb-6">
              Are you sure you want to delete {contact.full_name}? This action cannot be undone.
            </p>
            <div className="flex gap-3">
              <button
                onClick={handleDelete}
                disabled={deleteMutation.isPending}
                className={cn(
                  'flex-1 bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg font-medium transition-colors',
                  deleteMutation.isPending && 'opacity-50 cursor-not-allowed'
                )}
              >
                {deleteMutation.isPending ? 'Deleting...' : 'Delete'}
              </button>
              <button
                onClick={() => setShowDeleteConfirm(false)}
                disabled={deleteMutation.isPending}
                className="flex-1 bg-gray-800 hover:bg-gray-700 text-white px-4 py-2 rounded-lg font-medium transition-colors"
              >
                Cancel
              </button>
            </div>
          </div>
        </div>
      )}
    </PortalLayout>
  );
}
