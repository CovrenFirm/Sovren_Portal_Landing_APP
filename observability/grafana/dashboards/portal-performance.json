{
  "title": "Sovren Portal Performance",
  "uid": "sovren-portal-perf",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Portal Uptime",
      "type": "stat",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "expr": "up{job=\"portal\"}",
          "legendFormat": "Status",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": [
            "lastNotNull"
          ]
        },
        "text": {},
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "red"
              },
              {
                "value": 1,
                "color": "green"
              }
            ]
          },
          "mappings": [
            {
              "type": "value",
              "value": "1",
              "text": "UP"
            },
            {
              "type": "value",
              "value": "0",
              "text": "DOWN"
            }
          ]
        }
      }
    },
    {
      "id": 2,
      "title": "HTTP Request Rate",
      "type": "graph",
      "gridPos": {
        "x": 6,
        "y": 0,
        "w": 9,
        "h": 4
      },
      "targets": [
        {
          "expr": "rate(http_requests_total{job=\"portal\"}[1m])",
          "legendFormat": "{{method}} {{status}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "reqps",
          "label": "Requests/sec"
        },
        {
          "format": "short"
        }
      ],
      "lines": true,
      "fill": 1,
      "linewidth": 2
    },
    {
      "id": 3,
      "title": "HTTP Error Rate (5xx)",
      "type": "stat",
      "gridPos": {
        "x": 15,
        "y": 0,
        "w": 4,
        "h": 4
      },
      "targets": [
        {
          "expr": "rate(http_requests_total{job=\"portal\",status=~\"5..\"}[1m])",
          "legendFormat": "5xx Errors/sec",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": [
            "lastNotNull"
          ]
        }
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 0.01,
                "color": "yellow"
              },
              {
                "value": 0.05,
                "color": "red"
              }
            ]
          },
          "unit": "reqps"
        }
      }
    },
    {
      "id": 4,
      "title": "API Proxy Latency (P95)",
      "type": "graph",
      "gridPos": {
        "x": 0,
        "y": 4,
        "w": 12,
        "h": 6
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"portal\"}[5m]))",
          "legendFormat": "{{route}} P95",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"portal\"}[5m]))",
          "legendFormat": "{{route}} P50",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "format": "s",
          "label": "Latency"
        },
        {
          "format": "short"
        }
      ],
      "lines": true,
      "fill": 0,
      "linewidth": 2,
      "legend": {
        "show": true,
        "alignAsTable": true,
        "avg": true,
        "max": true,
        "current": true
      }
    },
    {
      "id": 5,
      "title": "Next.js Page Load Time",
      "type": "graph",
      "gridPos": {
        "x": 12,
        "y": 4,
        "w": 12,
        "h": 6
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(nextjs_page_load_duration_seconds_bucket[5m]))",
          "legendFormat": "{{page}} P95",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "s",
          "label": "Load Time"
        },
        {
          "format": "short"
        }
      ],
      "lines": true,
      "fill": 1,
      "linewidth": 2
    },
    {
      "id": 6,
      "title": "Active Connections",
      "type": "graph",
      "gridPos": {
        "x": 0,
        "y": 10,
        "w": 8,
        "h": 4
      },
      "targets": [
        {
          "expr": "nodejs_active_connections{job=\"portal\"}",
          "legendFormat": "Active",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Connections"
        },
        {
          "format": "short"
        }
      ],
      "lines": true,
      "fill": 2
    },
    {
      "id": 7,
      "title": "Memory Usage",
      "type": "graph",
      "gridPos": {
        "x": 8,
        "y": 10,
        "w": 8,
        "h": 4
      },
      "targets": [
        {
          "expr": "nodejs_heap_size_used_bytes{job=\"portal\"} / 1024 / 1024",
          "legendFormat": "Heap Used (MB)",
          "refId": "A"
        },
        {
          "expr": "nodejs_heap_size_total_bytes{job=\"portal\"} / 1024 / 1024",
          "legendFormat": "Heap Total (MB)",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "format": "decmbytes",
          "label": "Memory"
        },
        {
          "format": "short"
        }
      ],
      "lines": true,
      "fill": 1
    },
    {
      "id": 8,
      "title": "Event Loop Lag",
      "type": "graph",
      "gridPos": {
        "x": 16,
        "y": 10,
        "w": 8,
        "h": 4
      },
      "targets": [
        {
          "expr": "nodejs_eventloop_lag_seconds{job=\"portal\"} * 1000",
          "legendFormat": "Lag (ms)",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "ms",
          "label": "Lag"
        },
        {
          "format": "short"
        }
      ],
      "lines": true,
      "fill": 2,
      "alert": {
        "conditions": [
          {
            "evaluator": {
              "params": [
                100
              ],
              "type": "gt"
            },
            "query": {
              "params": [
                "A",
                "5m",
                "now"
              ]
            },
            "type": "query"
          }
        ]
      }
    }
  ]
}
